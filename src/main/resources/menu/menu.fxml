<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>

<ToolBar fx:id="menuItems" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.MenuController">
	<items>
		<Button mnemonicParsing="false" onAction="#retourAccueil" text="&lt;-" />
		<MenuBar style="-fx-background-color: transparent;">
			<menus>
				<Menu mnemonicParsing="false" text="Fichier">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#openListeDevis" text="Voir les devis" />
						<MenuItem disable="true" mnemonicParsing="false" text="Voir le stock" />
						<MenuItem mnemonicParsing="false" onAction="#openListeClient" text="Voir les clients" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Paramètrage">
				   <items>
				      <MenuItem disable="true" mnemonicParsing="false" text="Réglage" />
				   </items>
				</Menu>
				<Menu mnemonicParsing="false" text="Aide">
					<items>
						<MenuItem mnemonicParsing="false" text="Informations" />
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem disable="true" mnemonicParsing="false" text="A propos" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</items>
</ToolBar>
